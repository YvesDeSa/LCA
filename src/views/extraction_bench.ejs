<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
<script>
  // Função para exibir o formulário
  function showForm(formId, id = null, type = '', total_quantity = '', weight = '') {
    const form = document.getElementById(formId);
    const formElement = document.getElementById('rockFormElement');
    const actionUrl = id ? `/rock/${id}/edit?_method=PUT` : '/rock';
    formElement.action = actionUrl;

    document.getElementById('rockId').value = id || '';
    document.getElementById('rockType').value = type || '';
    document.getElementById('rockQuantity').value = total_quantity || '';
    document.getElementById('rockWeight').value = weight || '';

    form.style.display = 'block';
  }

  // Função para ocultar o formulário
  function hideForm(formId) {
    const form = document.getElementById(formId);
    form.style.display = 'none';
  }

  // Função de validação Bootstrap
  (() => {
    'use strict';
    const forms = document.querySelectorAll('.needs-validation');
    Array.prototype.slice.call(forms).forEach((form) => {
      form.addEventListener('submit', (event) => {
        if (!form.checkValidity()) {
          event.preventDefault();
          event.stopPropagation();
        }
        form.classList.add('was-validated');
      }, false);
    });
  })();

  // Função para mostrar/esconder submenus
  function toggleSubmenu(id, element) {
    const submenu = document.getElementById(id);
    const icon = element.querySelector('.icon i');

    if (submenu.style.display === 'block') {
      submenu.style.display = 'none';
      icon.classList.remove('fa-times');
      icon.classList.add('fa-chevron-down');
    } else {
      submenu.style.display = 'block';
      icon.classList.remove('fa-chevron-down');
      icon.classList.add('fa-times');
    }
  }
</script>

