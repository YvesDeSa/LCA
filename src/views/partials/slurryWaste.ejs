<div id="section-slurryWaste" class="content-section" style="display:none;">
    <h1 class="mb-4">Manage Slurry Waste</h1>
    <button class="btn btn-primary mb-4" onclick="toggleForm('slurryWasteForm')">Add New Slurry Waste</button>
  
    <!-- Formulário de Slurry Waste -->
    <div id="slurryWasteForm" class="form-container mb-5" style="display:none;">
      <div class="card shadow border-primary">
        <div class="card-body">
          <h2 class="card-title mb-4">Add / Edit Slurry Waste</h2>
          <form id="slurryWasteFormElement" method="POST" class="needs-validation" novalidate>
            <div class="row g-3">
              <div class="col-md-3">
                <label for="slurryWasteType" class="form-label">Type</label>
                <input type="text" class="form-control" id="slurryWasteType" name="type" required>
              </div>
              <div class="col-md-3">
                <label for="slurryWasteQuantity" class="form-label">Quantity (tons)</label>
                <input type="number" class="form-control" id="slurryWasteQuantity" name="quantity" required>
              </div>
              <div class="col-md-3">
                <label for="slurryWasteTreatment" class="form-label">Treatment</label>
                <input type="text" class="form-control" id="slurryWasteTreatment" name="treatment" required>
              </div>
              <div class="col-md-3">
                <label for="slurryWasteDensity" class="form-label">Density (t/m³)</label>
                <input type="number" class="form-control" id="slurryWasteDensity" name="density" required>
              </div>
            </div>
  
            <div class="mt-4">
              <button type="submit" class="btn btn-success">Submit</button>
              <button type="button" class="btn btn-secondary" onclick="hideForm('slurryWasteForm')">Cancel</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  
    <!-- Lista de Slurry Wastes -->
    <div class="table-responsive">
      <table class="table table-bordered table-hover table-striped">
        <thead class="table-dark">
          <tr>
            <th>ID</th>
            <th>Type</th>
            <th>Quantity (tons)</th>
            <th>Treatment</th>
            <th>Density (t/m³)</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% slurryWastes.forEach(function(slurryWaste) { %>
            <tr>
              <td><%= slurryWaste.id %></td>
              <td><%= slurryWaste.type %></td>
              <td><%= slurryWaste.quantity %></td>
              <td><%= slurryWaste.treatment %></td>
              <td><%= slurryWaste.density %></td>
              <td>
                <button class="btn btn-warning btn-sm me-2" onclick="showForm('slurryWasteForm', '<%= slurryWaste.id %>', '<%= slurryWaste.type %>', '<%= slurryWaste.quantity %>', '<%= slurryWaste.treatment %>', '<%= slurryWaste.density %>')">
                  <i class="fas fa-pen"></i>
                </button>
                <form action="/slurryWaste/<%= slurryWaste.id %>/delete" method="POST" style="display: inline;">
                  <button class="btn btn-danger btn-sm" type="submit" onclick="return confirm('Are you sure you want to delete this slurry waste?');">
                    <i class="fas fa-trash-alt"></i>
                  </button>
                </form>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
  